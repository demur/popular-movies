<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/iv_detail_backdrop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_detail_backdrop_height"
        android:adjustViewBounds="true"
        android:background="@android:color/background_dark"
        android:contentDescription=""
        android:elevation="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tv_detail_title_margin"
        android:background="@drawable/rounded_corners"
        android:elevation="4dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="bottom|center"
        android:paddingBottom="@dimen/tv_detail_title_padding"
        android:paddingLeft="@dimen/tv_detail_title_padding"
        android:paddingRight="@dimen/tv_detail_title_padding"
        android:textColor="@color/tv_detail_title"
        android:textSize="@dimen/tv_detail_title_text_size"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/iv_detail_backdrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@id/iv_detail_poster"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_detail_poster"
        tools:text="Once Upon a Time in America" />

    <ImageView
        android:id="@+id/iv_detail_poster"
        android:layout_width="@dimen/iv_detail_poster_width"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/iv_detail_poster_margin_left"
        android:layout_marginStart="@dimen/iv_detail_poster_margin_left"
        android:adjustViewBounds="true"
        android:background="@android:color/background_dark"
        android:contentDescription=""
        android:elevation="4dp"
        app:layout_constraintDimensionRatio="H,2:3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_title" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/sv_margin_start"
        android:layout_marginStart="@dimen/sv_margin_start"
        android:fadeScrollbars="false"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_detail_poster"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_detail_poster"
        app:layout_constraintTop_toBottomOf="@+id/iv_detail_backdrop">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_release_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/release_date_label"
                android:textSize="@dimen/labels_text_size"
                app:layout_constraintBottom_toBottomOf="@id/tv_release_date"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_release_date" />

            <TextView
                android:id="@+id/tv_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/content_tv_margin_start"
                android:layout_marginStart="@dimen/content_tv_margin_start"
                android:layout_marginTop="@dimen/labels_margin_top"
                android:textColor="@android:color/black"
                android:textSize="@dimen/content_tv_text_size"
                app:layout_constraintLeft_toRightOf="@id/tv_release_date_label"
                app:layout_constraintStart_toEndOf="@id/tv_release_date_label"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="2019-06-09" />

            <TextView
                android:id="@+id/tv_vote_average_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/labels_margin_top"
                android:layout_marginStart="@dimen/labels_margin_top"
                android:text="@string/user_rating_label"
                android:textSize="@dimen/labels_text_size"
                app:layout_constraintLeft_toRightOf="@id/tv_release_date"
                app:layout_constraintStart_toEndOf="@id/tv_release_date"
                app:layout_constraintTop_toTopOf="@id/tv_release_date_label" />

            <TextView
                android:id="@+id/tv_vote_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/content_tv_margin_start"
                android:layout_marginStart="@dimen/content_tv_margin_start"
                android:textColor="@android:color/black"
                android:textSize="@dimen/content_tv_text_size"
                app:layout_constraintLeft_toRightOf="@id/tv_vote_average_label"
                app:layout_constraintStart_toEndOf="@id/tv_vote_average_label"
                app:layout_constraintTop_toTopOf="@id/tv_release_date"
                tools:text="9.3/10" />

            <TextView
                android:id="@+id/tv_overview_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/labels_margin_top"
                android:text="@string/overview_label"
                android:textSize="@dimen/labels_text_size"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_release_date" />

            <TextView
                android:id="@+id/tv_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/tv_overview_margin_end_bottom"
                android:layout_marginRight="@dimen/tv_overview_margin_end_bottom"
                android:layout_marginTop="@dimen/content_tv_margin_top"
                android:justificationMode="inter_word"
                android:paddingBottom="@dimen/tv_overview_margin_end_bottom"
                android:textColor="@android:color/black"
                android:textSize="@dimen/content_tv_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_overview_label"
                tools:text="\t\tA ticking-time-bomb insomniac and a slippery soap salesman channel primal male aggression into a shocking new form of therapy. Their concept catches on, with underground 'fight clubs' forming in every town, until an eccentric gets in the way and ignites an out-of-control spiral toward oblivion." />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>