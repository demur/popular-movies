<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/iv_detail_backdrop"
        style="@style/DetailBackDrop" />

    <TextView
        android:id="@+id/tv_detail_title"
        style="@style/DetailMovieTitle"
        tools:text="Once Upon a Time in America" />

    <ImageView
        android:id="@+id/iv_detail_poster"
        style="@style/DetailPoster" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/ib_favorite"
        style="@style/FavoriteImageButton" />

    <TextView
        android:id="@+id/tv_release_date_label"
        style="@style/Label"
        android:layout_marginTop="0dp"
        android:text="@string/release_date_label"
        app:layout_constraintStart_toStartOf="@id/iv_detail_poster"
        app:layout_constraintTop_toBottomOf="@id/ib_favorite" />

    <TextView
        android:id="@+id/tv_release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content_tv_margin_start"
        android:layout_marginStart="@dimen/content_tv_margin_start"
        android:layout_marginTop="@dimen/content_tv_margin_top"
        android:textColor="@android:color/black"
        android:textSize="@dimen/content_tv_text_size"
        app:layout_constraintStart_toStartOf="@id/tv_release_date_label"
        app:layout_constraintTop_toBottomOf="@id/tv_release_date_label"
        tools:text="2019-06-09" />

    <TextView
        android:id="@+id/tv_vote_average_label"
        style="@style/Label"
        android:layout_marginTop="@dimen/labels_margin_top"
        android:text="@string/user_rating_label"
        app:layout_constraintStart_toStartOf="@id/tv_release_date_label"
        app:layout_constraintTop_toBottomOf="@id/tv_release_date" />

    <TextView
        android:id="@+id/tv_vote_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_tv_margin_top"
        android:textColor="@android:color/black"
        android:textSize="@dimen/content_tv_text_size"
        app:layout_constraintStart_toStartOf="@id/tv_release_date"
        app:layout_constraintTop_toBottomOf="@id/tv_vote_average_label"
        tools:text="9.3/10" />

    <View style="@style/TabsBackground" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        style="@style/TabLayout" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_container"
        style="@style/ViewPagerContainer" />
</android.support.constraint.ConstraintLayout>